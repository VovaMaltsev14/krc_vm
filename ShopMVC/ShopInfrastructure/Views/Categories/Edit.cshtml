@model ShopDomain.Model.Category

@{
    ViewData["Title"] = "Edit";
}

<h1>Змінити</h1>

<h4>Категорія</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CgName" class="control-label"></label>
                <input asp-for="CgName" class="form-control" />
                <span asp-validation-for="CgName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CgParentCategory" class="control-label"></label>
                <input asp-for="CgParentCategory" class="form-control" />
                <span asp-validation-for="CgParentCategory" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="CgDescription" class="control-label"></label>
                <input asp-for="CgDescription" class="form-control" />
                <span asp-validation-for="CgDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success mb-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-light">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
