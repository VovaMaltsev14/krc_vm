@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Products with All Same Categories";
}

<h2>Products with All Same Categories</h2>

<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="productId">Product ID:</label>
                <input type="number" class="form-control" id="productId" name="productId" required min="1">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>&nbsp;</label>
                <button type="submit" class="btn btn-primary form-control">Search</button>
            </div>
        </div>
    </div>
</form>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Categories</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PdName</td>
                    <td>@item.Categories</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products found that share all categories with the specified product.</p>
}

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to Menu</a>
</div>