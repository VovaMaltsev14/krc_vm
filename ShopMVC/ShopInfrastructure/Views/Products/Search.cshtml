@model List<ShopDomain.Model.Product>
@{
    ViewData["Title"] = "Результати пошуку";
}

<h2>Результати пошуку для "@ViewBag.Query"</h2>

@if (Model.Count == 0)
{
    <p>Нічого не знайдено.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="~/images/@product.PdImagePath" class="card-img-top" alt="@product.PdName">
                    <div class="card-body">
                        <h5 class="card-title">@product.PdName</h5>
                        <p class="card-text">@product.PdAbout</p>
                        <p class="card-text"><strong>Ціна:</strong> @product.PdPrice ₴</p>
                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary">Детальніше</a>
                    </div>
                </div>
            </div>
        }
    </div>
}